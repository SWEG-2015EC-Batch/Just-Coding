//mean and standard deviation calculator
#include<iostream>
#include<math.h>
using namespace std;

int main(){

     int count;
cout<<"how many numbers do you want to add: "<<endl;
                cin>>count;

        float num[i], sum, mean, standard_Deviation,   
    variance=0.0;
        int i;

  for(i=0; i<count; i++){

   cout<<"enter number"<<i+1<<":";

    cin>>num;
                }
                
   for(i=0; i<count; i++){

   sum+= num[i];
                
   cout<<"sum= "<<sum+<<endl;

   mean=sum/i;

   variance+=pow(num[i]-mean,2);

  variance=variance/i;

 standard_Deviation=sqrt(variance);

  cout<<"the mean is:"<<mean<<endl;

 cout<<"the standard deviation is: "<<standard_Deviation<<endl;         
                }               

                return 0;
        }

	
